#include<iostream>
#include<conio.h>
using namespace std;

struct time{
	int jam;
	int min;
};

struct rencana{
struct time	awal;
struct time akhir;
int y;
int z;
};
struct rencana kerja = {11,22,33,44,5,6};

funct(struct rencana oo);

main()
{
	kerja akhir.min=40;
	kerja.z=66;
	cout<<"proses main sebelum ke fungsi\n"<<kerja.awal.jam<<""<<kerja.awal.min<<""<<kerja.akhir.jam<<""<<kerja.akhir.min<<""<<kerja.z<<endl;
	
	funct(kerja);
	cout<<"proses main sesudah ke fungsi\n"<<kerja.awal.jam<<""<<kerja.awal.min<<""<<kerja.akhir.jam<<""<<kerja.akhir.min<<""<<kerja.z<<endl;
	getch();
}

funct(struct rencana oo)
{
	cout<<"dalam fungsi (a)\n"<<oo.awal.jam<<""<<oo.awal.min<<""<<oo.akhir.jam<<""<<oo.akhir.min""<<oo.y<<""<<oo.z<<endl;
	oo.awal.jam=111;
	oo.y=555;
	
	cout <<"dalam fungsi (a)\n"<<oo.awal.jam<<""<<oo.awal.min<<""<<oo.akir.jam<<""<<oo.akhir.min<<""<<oo.y<<""<<oo.z<<endl;
}
